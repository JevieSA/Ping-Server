<Window x:Class="Ping_Server.AddServerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ping_Server"
        mc:Ignorable="d"
        Title="AddServerWindow" SizeToContent="WidthAndHeight">
    <Grid Margin="5, 5, 5 ,5">
        <StackPanel>
            <TextBlock Text="Server Name" Margin="0, 5"/>
            <TextBox x:Name="txtName"/>
            <TextBlock Text="Server Name" Margin="0 ,5"/>
            <TextBox x:Name="txtAddress"/>
            <Button Content="Add Server" Margin="5, 5" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
