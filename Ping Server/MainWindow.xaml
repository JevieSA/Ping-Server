<Window x:Class="Ping_Server.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ping_Server"
        mc:Ignorable="d"
        Title="Server Ping" SizeToContent="WidthAndHeight">

    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Close" Click="MenuItem_Click">                    
                </MenuItem>
            </MenuItem>
        </Menu>
        <StackPanel Margin="5, 5, 5, 5">
            <Grid x:Name="Grid1"/>
            <Button Content="Add Server" Click="Button_Click"/>
        </StackPanel>
    </DockPanel>
        

</Window>
